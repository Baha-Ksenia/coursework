<Window x:Class="StreetMenu.StreetEditWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StreetMenu"
      mc:Ignorable="d" 
      ResizeMode="NoResize"
	  Title="{Binding Tittle}" Height="194" Width="235"
	  Visibility="{Binding WindowVisibility, Mode=TwoWay}">

    <Grid>
        <StackPanel Margin="23,0,23,0">
            <Label Content="Название улицы"/>
            <TextBox TextWrapping="Wrap" Text="{Binding StreetName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="178" BorderBrush="#FF385ADE"/>
            <Button HorizontalAlignment="Center" Height="37" Width="177" Margin="0,50,0,0" Content="Запись" Command="{Binding EditModelCommand}" Foreground="White" BorderBrush="White">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF0025B2" Offset="1"/>
                        <GradientStop Color="#FF5C7DFB" Offset="0"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </StackPanel>
    </Grid>
</Window>